\tikzset{
node distance=1.5cm, % specifies the minimum distance between two nodes. Change if necessary.
every state/.style = {
        draw=blue!75,
        thick,
        fill = blue!20,
        minimum size = 8mm,
        inner sep=2pt
	},
	every edge/.style = {
		draw,
		->, >=stealth', % makes the arrow heads bold
		shorten >= 1pt,
		thin,
		on grid,
	},
